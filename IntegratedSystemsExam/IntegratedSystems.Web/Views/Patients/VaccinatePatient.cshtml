@model IntegratedSystems.Domain.DTOs.VaccinationDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vaccinate Patient</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VaccinatePatient">
            <input type="hidden" asp-for="CenterId" value="@Model.CenterId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label"></label>
                @Html.DropDownListFor(x => Model.ManufacturerId, new SelectList(Model.Manufacturers), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="DateTaken" class="control-label"></label>
                <input type="datetime" asp-for="DateTaken" class="form-control" />
                <span asp-validation-for="DateTaken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                @Html.DropDownListFor(x => Model.PatientId, new SelectList(Model.Patients, "Id", "FirstName"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Vaccinate Patient" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
